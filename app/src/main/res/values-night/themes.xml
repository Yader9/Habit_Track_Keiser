<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Tema HabitTrack en modo oscuro -->
    <style name="Theme.HabitTrack" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Colores principales -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorSecondary">@color/colorAccent</item>

        <!-- Fondo de la app -->
        <item name="android:windowBackground">@color/backgroundDark</item>

        <!-- Texto principal -->
        <item name="android:textColorPrimary">@color/textPrimaryDark</item>
        <item name="android:textColorSecondary">@color/textSecondaryDark</item>

        <!-- Status bar / nav bar -->
        <item name="android:statusBarColor">@color/backgroundDark</item>
        <item name="android:navigationBarColor">@color/backgroundDark</item>
    </style>

</resources>
